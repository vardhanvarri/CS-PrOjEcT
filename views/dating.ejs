  src: local('Open Sans'), local('OpenSans'), url(https://fonts.gstatic.com/s/productsans/v5/HYvgU2fE2nRJvZ5JFAumwegdm0LZdjqr5-oayXSOefg.woff2) format('woff2');
}


    width: 500px;
    display: none;
    height: 600px;
    position: fixed;
    font-family: 'Product Sans';
  font-style: normal;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: rgb(117, 34, 78,0.8);
    border: 2px solid rgb(29, 2, 33,0.5);
    border-radius: 30px;
    padding: 20px;" >
      <div id="img"></div>
      <button id="prev">Previous</button>
      <button id="next">Next</button>
    </div>
    
        <br />
        <br />
        <button type="submit" >Find Match</button>
        <button type="button" onclick="profiles()">Scroll through profiles</button>
        <button type="button" onclick="logout()">Logout</button>
      </form>
    </div>
    <script src="js/date.js"></script>
    <script >
      const userHeading = document.getElementById('intro');
      const user="<%= user %>"

      function profiles() {
    
    fetch("/profile")
        .then(response => {
            console.log("Redirecting to profiles page");
            // Redirect to profiles page
            window.location.href = "/profile";
        })
        .catch(error => {
            console.error("Redirecting failed", error);
        });
}

    function logout() {

      fetch("/logout")
          .then(response => {
              console.log("Logout successful");
              // Redirect to another page if needed
              window.location.href = "/";
          })
          .catch(error => {
              console.error("Logout failed", error);
          });
  }
  </script>
  </body>
</html>
